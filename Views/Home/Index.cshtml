@model List<FreelancingSystem.Models.JobPost>
@Styles.Render("~/myDesign")
<h1>Job Posts</h1>
@foreach (var item in Model)
{
    // render posts
    // if post is approved show it and is not assigned to freelancer render it

    if (item.Approved && item.FreelancerId == 0)
    {
    <div class="container" style="margin-top:35px; margin-left:300px;">

        <div id="products" class="row list-group">
            <div class="item  col-xs-4 col-lg-4">
                <div class="thumbnail">

                    <div class="caption">
                        <h4 class="group inner list-group-item-heading">
                            @item.Name .
                        </h4>
                        <p class="group inner list-group-item-text">
                            Job description<br />
                            @item.Discreption
                        </p>
                        <div class="row">
                            <div class="col-xs-12 col-md-6">
                                <p class="lead">
                                    Budget:  @item.Budget.ToString("C")
                                </p>
                                <p class="lead">
                                    Type :  @item.Type
                                </p>
                                <p>@item.CreationDate.ToString("MM/dd/yyyy h:mm tt")</p>
                            </div>
                            <div class="col-xs-12 col-md-6">
                                <a class="btn btn-success" href="/JobPost/GetJobPost/@item.JobPostID">Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    }

}