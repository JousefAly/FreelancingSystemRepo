@model List<FreelancingSystem.Models.JobPost>
@Styles.Render("~/myDesign")
<h1>Job Posts</h1>
@foreach (var item in Model)
{
    // render posts

    <div class="container" style="margin-top:35px; margin-left:300px;">

        <div id="products" class="row list-group">
            <div class="item  col-xs-4 col-lg-4">
                <div class="thumbnail">

                    <div class="caption">
                        <h4 class="group inner list-group-item-heading">
                            Client id : @item.ClientID .
                        </h4>
                        <p class="group inner list-group-item-text">
                            Job description... @item.Discreption
                        </p>
                        <div class="row">
                            <div class="col-xs-12 col-md-6">
                                <p class="lead">
                                    @item.Budget
                                </p>
                            </div>
                            <div class="col-xs-12 col-md-6">
                                <a class="btn btn-success" href="/JobPost/GetJobPost/@item.JobPostID">Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

}